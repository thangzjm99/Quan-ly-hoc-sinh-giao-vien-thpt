@model bai2.staff_program

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>staff_program</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Staff
        </dt>

        <dd>
            @foreach (var staff in ViewBag.staffList)
            {
                if (staff.id == Model.id_staff)
                {
                    @staff.name
                }
            }
        </dd>

        <dt>
            Program
        </dt>

        <dd>
            @foreach (var program in ViewBag.programList)
            {
                if (program.id == Model.id_program)
                {
                    @program.name
                }
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
