@model bai2.staff_program

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>staff_program</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            <label>Choose Staff</label>
            <div class="col-md-10">
                @Html.DropDownList("id_staff", (IEnumerable<SelectListItem>)ViewBag.staffList, "Choose Staff", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label>Program</label>
            <div class="col-md-10">
                @Html.DropDownList("id_program", (IEnumerable<SelectListItem>)ViewBag.programList, "Choose Program", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
