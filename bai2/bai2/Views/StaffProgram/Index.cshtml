@model IEnumerable<bai2.staff_program>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_staff)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.id_program)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.id)
    </td>
    <td>
        @foreach (var staff in ViewBag.studentList)
        {
            if (staff.id == item.id_staff)
            {
                @staff.name
            }
        }
    </td>
    <td>
        @foreach (var program in ViewBag.programList)
        {
            if (program.id == item.id_program)
            {
                @program.name
            }
        }
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
        @Html.ActionLink("Details", "Details", new { id = item.id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.id })
    </td>
</tr>
}

</table>
