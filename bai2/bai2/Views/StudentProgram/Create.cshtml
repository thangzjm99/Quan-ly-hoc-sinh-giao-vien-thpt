@model bai2.student_program

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>student_program</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Choose Student</label>
            <div class="col-md-10">
                @Html.DropDownList("id_student", (IEnumerable<SelectListItem>)ViewBag.studentList, "Choose Student",new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label>Choose Program</label>
            <div class="col-md-10">
                @Html.DropDownList("id_program", (IEnumerable<SelectListItem>)ViewBag.programList,"Choose Program", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
