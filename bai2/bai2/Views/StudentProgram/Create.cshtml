@model bai2.student_program

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "StudentProgram", FormMethod.Post, new { @id = "createStudentProgram" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>student_program</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label>Choose Student</label>
            <div class="col-md-10">
                @Html.DropDownList("id_student", (IEnumerable<SelectListItem>)ViewBag.studentList, "Choose Student", new { @class = "form-control", name = "id_student" })
            </div>
        </div>

        <div class="form-group">
            <label>Choose Program</label>
            <div class="col-md-10">
                @Html.DropDownList("id_program", (IEnumerable<SelectListItem>)ViewBag.programList, "Choose Program", new { @class = "form-control", name = "id_program" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input id="submit_button" type="button" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script src="https://code.jquery.com/jquery-3.4.1.js"
        integrity="sha256-WpOohJOqMqqyKL9FccASB9O0KwACQJpFTUBLTYOVvVU="
        crossorigin="anonymous">
</script>
<script>


    $(document).ready(function () {
        $("#createStudentProgram").validate({
            // Specify validation rules
            rules: {
                id_student: "required",
                id_program : "required"
            },
            messages: {
                id_student: "Vui lòng chọn sinh viên",
                id_program : "Vui lòng chọn học phần"
            },
            submitHandler: function (form) {
                form.submit()
            }
        });
    })

    $('#submit_button').click(function() {
			if ($('#createStudentProgram').valid()){
				$('#createStudentProgram').submit();
			}
		})
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
